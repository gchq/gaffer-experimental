{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    //    "func-style": ["error", "global"],
    "no-new-func": "error",
    "no-param-reassign": "error",
    "prefer-arrow-callback": "error",
    "arrow-parens": ["error", "always"],
    "arrow-body-style": ["error", "as-needed"],
    "new-cap": "error",
    "no-invalid-this": "error",
    "prefer-const": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-with": "error",
    "no-plusplus": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "eslintIntegration": true
      }
    ]
  }
}