{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-new-func": "error",
    "no-param-reassign": "error",
    "prefer-arrow-callback": "error",
    "arrow-parens": ["error", "always"],
    "arrow-body-style": ["error", "as-needed"],
    "quotes": [2, "double", "avoid-escape"],
    "new-cap": "error",
    "prefer-const": "error",
    "no-invalid-this": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-with": "error",
    "no-plusplus": "error"
  }
}